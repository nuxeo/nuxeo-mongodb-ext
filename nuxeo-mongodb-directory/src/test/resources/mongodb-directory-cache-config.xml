<?xml version="1.0"?>
<component name="org.nuxeo.ecm.directory.mongodb.storage.cache">

  <extension target="org.nuxeo.ecm.core.cache.CacheService" point="caches">

    <cache name="mongodb-entry-cache" class="org.nuxeo.ecm.core.cache.InMemoryCacheImpl">
      <maxSize>100</maxSize>
      <ttl>1</ttl><!-- minutes -->
      <concurrencyLevel>1</concurrencyLevel>
    </cache>

    <cache name="mongodb-entry-cache-without-references" class="org.nuxeo.ecm.core.cache.InMemoryCacheImpl">
      <maxSize>100</maxSize>
      <ttl>1</ttl><!-- minutes -->
      <concurrencyLevel>1</concurrencyLevel>
    </cache>


  </extension>

</component>
